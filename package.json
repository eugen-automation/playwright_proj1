{
  "name": "playwright-nopcommerce-automation",
  "version": "1.0.0",
  "description": "Playwright automation framework with POM, ComponentPage, Allure, Docker, logger, and GitHub Actions.",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:allure": "npx playwright test --reporter=line,allure-playwright",
    "allure:serve": "npx allure serve ./allure-results",
    "allure:generate": "npx allure generate ./allure-results --clean -o ./allure-report",
    "update.packages": "npm i npm-check-updates && ncu -u && npm i"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.0",
    "allure-playwright": "^3.3.3",
    "jsdoc": "^4.0.4",
    "npm-check-updates": "^18.0.3",
    "typescript": "^5.9.2"
  }
}
